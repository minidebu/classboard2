<div class = "container">
	<div class="wrapper ">
    <h2 class="mt-5 mb-3 text-center">Log in</h2> 
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field col-3 mx-auto">
        <%= f.email_field :email ,autofocus: true, placeholder: "Email",autocomplete: "email",class:"form-control "  %>
      </div>

      <div class="field col-3 mx-auto">
        <%= f.password_field :password,placeholder: "Password", autocomplete: "current-password" ,class:"form-control"  %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field col-3 mx-auto mt-2  ">
          <%= f.check_box :remember_me %>
          <%= f.label 'ログイン状態を保持する' %>
        </div>
      <% end %>

      <div class="actions mt-2 text-center">
        <%= f.submit "Log in" ,class:"btn btn-lg btn-primary col-3 "%>
      </div>
      
    <% end %>
  </div>
</div>    




