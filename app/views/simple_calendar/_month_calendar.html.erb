<div class="simple-calendar">
  <div class="calendar-heading">
  <h3><%= start_date.year %> 年</h3>
    <%= link_to t('simple_calendar.previous', default: '前月'), calendar.url_for_previous_view %>
    <span class="calendar-title h3 mx-3 ">
      <%= t('date.month_names')[start_date.month] %> 
    </span>
    <%= link_to t('simple_calendar.next', default: '翌月'), calendar.url_for_next_view %>
  </div>
 
  
  <table id="mon_calendar",class="table">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <% case t('date.abbr_day_names')[day.wday] %>
          <% when "土" then %>
            <th class = "w-saturday text-center"><%= t('date.abbr_day_names')[day.wday] %></th>
          <% when "日" then %>
            <th class = "w-sunday text-center"><%= t('date.abbr_day_names')[day.wday] %></th>
          <% else %>
            <th class = "text-center"><%= t('date.abbr_day_names')[day.wday] %></th>
          <% end %>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
