<!------ 生徒の登録フォーム---------->

<div class = "container">
	<div class="wrapper">

	<%= render 'error_messages', model: @student%>
		<%=form_with model:@student,local: true do |f| %>       
			<%= f.text_field :kana_name ,pattern:"[\u30A1-\u30F6]*" %><br>
			<%= f.text_field :name %><br>


			<%= raw sprintf(
				f.date_select(
					:birth_on,
					class:'select-birth',
					id:"birth-date",
					use_month_numbers: true,
					prompt:'--',
					start_year: (Time.now.year - 5),
					end_year: (Time.now.year - 120),
					date_separator: '%s'),
				"年", "月") + "日" %>
				<%= f.submit '登録する'%>
    </div>
		<% end %>			
	</div>
</div>
 
 <%= link_to 'ログアウト' ,destroy_user_session_path , method: :delete%>
 <!------ 生徒の一覧フォーム---------->

	<div class = "container">
		<div class="wrapper">
		<p><%= Date.today%> </p>
			<% @students.each do |student|%>
				<%= student.school_year%> <br>
			<%end%>
		</div>
	</div>

	<div class = "container">
		<h1>一覧表示</h1>
		<table class="table table-hover table-bordered text-center">
			<thead>
				<tr >
					<th class="text-center col-2">No </th ><th class="text-center col-5	">名前</th><th class="text-center col-2">年齢</th><th class="text-center col-4">学年</th>
				</tr>
			</thead>
			<tbody>
				<% @students.each_with_index do |student , index|%>
					<tr >
						<td ><%= index+1 %></td><td ><%= student.name %></td><td><%= student.get_age%></td><td><%= student.school_year%></td>
					</tr>
				<%end%>
			</tbody>
		</table>
	</div>


</body>