<div class = "container">
	<%= render 'shared/header'%>
	<h3 class="m-3" >生徒一覧</h3>
	<div class="btn-group" role="group" aria-label="Basic example">
		<button type="button" class="btn btn-secondary border mb-1"> 子供 </button>
		<button type="button" class="btn btn-secondary border mb-1"> 全体 </button>
		<button type="button" class="btn btn-secondary border mb-1"> 大人  </button>
	</div>

	<table class="table table-hover table-bordered text-center ">
		<thead>
			<tr >
				<th class="text-center col-1">No </th >
				<th class="text-center col-3	">名前</th>
				<th class="text-center col-3	">読み方</th>
				<th class="text-center col-2">年齢</th>
				<th class="text-center col-2">学年</th>
				<th class="text-center col-1">詳細</th>
			</tr>
		</thead>
		<tbody>
			<% @students.where(withdrawal_on: nil).order('birth_on DESC').each_with_index do |student , index|%>
				<tr >
					<td ><%= index+1 %></td>
					<td ><%= student.name %></td>
					<td ><%= student.kana_name %></td>
					<td><%= student.get_age%>歳</td>
					<td><%= student.school_grade%></td>
					<td><%= link_to '詳細' , student_path(student) ,local: true %></td> 
				</tr>
			<%end%>
		</tbody>
	</table>
</div>



