	<%= render 'error_messages', model: @student%>
		<%=form_with model:@student,local: true do |f| %>       
			<%= f.text_field :kana_name ,pattern:"[\u30A1-\u30F6]*" %><br>
			<%= f.text_field :name %><br>


			<%= raw sprintf(
				f.date_select(
					:birth_on,
					class:'select-birth',
					id:"birth-date",
					use_month_numbers: true,
					prompt:'--',
					start_year: 1930,
					end_year: (Time.now.year - 5),
					date_separator: '%s'),
				"年", "月") + "日" %>
				<%= f.submit '登録する'%>
    </div>
		<% end %>			
