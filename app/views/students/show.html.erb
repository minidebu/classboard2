<div class = "container d-flex">
  <div class=" col-6">

  <h1><%= @student.name%> </h1>

  <div class="mt-3"> 生年月日 : <%= @student.birth_on%></div>
  <div class="mt-2"> 年齢 :<%= @student.get_age%> </div>
  <div class="mt-2 mb-5"> 学年 :<%= @student.school_grade%></div>

	<%= link_to student_student_schedules_path(@student) ,method: :get do %>
      <button class="btn btn-info">週の計画</button >
    <% end %>

<%= render partial: "schedules/index", locals: { student: @student}%>

		<%=form_with model:@student,local: true ,url: student_path(@student),method: :patch,class: 'mt-4' do |f| %>  
  
 			<%= raw sprintf(
				f.date_select(
					:withdrawal_on,
					class:'select-withdrawal',
					id:"withdrawal-date",
					use_month_numbers: true,
					prompt:'--',
					start_year: (Time.now.year + 1 ),
					end_year: (Time.now.year - 1),
					date_separator: '%s'),
				"年", "月") + "日" %>
        <%= f.submit '退会する'%>
    <% end %>

    <%= link_to students_path,method: :get do %>
      <button class="btn btn-info">戻る</button >
    <% end %>

    <%= render 'error_messages', model: @student%>
